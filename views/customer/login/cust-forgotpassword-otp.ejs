<%-include("../../partials/cust-template.ejs")%>
  <link rel="stylesheet" href="/customer/login/cust-forgotpassword.css" />
  <title>Enter OTP</title>
</head>
<body>
  <%-include("../../partials/alert.ejs")%>
  <div class="main">
    <div class="right-section">
      <div class="right-outer">
        <div class="form-container">
          <div class="form-title">OtakuVerse</div>
          <div class="form-subtitle">Enter OTP</div>
          <div class="form-desc">
            Please enter the OTP that has been sent to your email address.
          </div>
          <form id="login-form" method="POST">
            <div class="input-container">
              <input
                id="otp-input"
                class="login-input"
                type="text"
                placeholder="Enter OTP"
              />
              <div class="error-container" id="otp-error"></div>
            </div>
            <input class="login-button" type="submit" value="SUBMIT" />
          </form>
          <div class="resend-row">
            <p id="timer-text">Resend OTP in <span id="timer"></span></p>
            <button id="resend-btn" disabled>Resend OTP</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/cust-forgotpassword-otp.js"></script>
</body>
</html>
