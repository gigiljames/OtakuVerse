<%- include('../../partials/cust-template.ejs') %>
    <link rel="stylesheet" href="customer/login/cust-login.css" />
    <title>OtakuVerse Login</title>
  </head>
  <body>
    <%- include('../../partials/alert.ejs') %>
    <%if(locals.message){%> 
      <script>
        alert("<%=message%>","error");
      </script>
    <%}%>
    <div class="main">
      <div class="left-section">
        <div class="left-outer">
          <div class="left-line1">OtakuVerse</div>
          <div class="left-line2">
            Your Ultimate Destination for Authentic Anime Merchandise, Where
            Every Fan Can Bring Their Favourite Worlds and Characters to Life!
          </div>
        </div>
      </div>
      <div class="right-section">
        <div class="right-outer">
          <div class="form-container">
            <div class="form-title">Log in</div>
            <a href="/auth/google" class="google-button">
              <img
                src="icons/google.png"
                class="google-icon"
                alt="google-icon"
              />
              <div class="google-button-text">Sign in with Google</div>
            </a>
            <div class="or">
              <div class="or-line"></div>
              <div class="or-text">OR</div>
              <div class="or-line"></div>
            </div>
            <form id="login-form" method="POST" action="/login">
              <div class="input-container">
                <label for="email-input">Email</label>
                <input
                  id="email-input"
                  class="login-input"
                  name="email"
                  type="text"
                />
              </div>
              <div id="email-error" class="error-container"></div>
              <div class="input-container">
                <label for="password-input">Password</label>
                <input
                  id="password-input"
                  class="login-input"
                  name="password"
                  type="password"
                />
              </div>
              <div id="password-error" class="error-container">
                
              </div>
              <input class="login-button" type="submit" value="Log In" />
            </form>
            <div class="signup-redirect">
              Don't have an account?
              <a href="/signup" class="login-form-link">Sign up</a>
            </div>
            <div class="forgot-password">
              <a href="/forgotpassword" class="login-form-link"
                >Forgot password?</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/cust-login.js"></script>
  </body>
</html>
