<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Category Management</title>
    <link rel="stylesheet" href="/admin/admin-navbar.css" />
    <link rel="stylesheet" href="/admin/categoryManagement/category-list.css" />
    <%- include('../../partials/font-links.ejs') %>
  </head>
  <body>
    <%- include('../../partials/admin-navbar.ejs') %>
    <div class="title-row">
      <div class="title">Category Management</div>
      <button class="add-button">Add Category</button>
    </div>
    <div class="category-list">
      <% if(categoryList.length===0){ %>
        <div>Nothing to show here.</div>
      <%}%>
      <% for(let i=0;i<categoryList.length;i++){ %>
        <a href="/admin/category/<%= categoryList[i]._id %>"><div class="category-button"><%= categoryList[i].category_name %></div></a>
      <% } %>
    </div>
    <div class="add-form-outer">
      <span class="material-symbols-outlined close-button"> close </span>
      <div class="add-form-inner">
        <div class="form-title">Add Category</div>
        <form id="add-form" method="POST" action="/admin/add-category">
          <div class="input-container">
            <label for="cat-name">Category Name</label>
            <input id="cat-name" type="text" name="name" />
          </div>
          <div id="name-error" class="error-container"></div>
          <div class="input-container">
            <label for="cat-desc">Category Description</label>
            <textarea id="cat-desc" name="desc"></textarea>
          </div>
          <div id="desc-error" class="error-container"></div>
          <input class="submit-button" type="submit" value="SUBMIT" />
        </form>
      </div>
    </div>
    <script src="/js/cust-navbar.js"></script>
    <script src="/js/category-list.js"></script>
  </body>
</html>
